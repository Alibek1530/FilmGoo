<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ali"
        tools:context=".NewFragment">

    <github.chenupt.springindicator.SpringIndicator
            android:scrollbars="horizontal"
            android:scrollIndicators="end"
            android:scrollbarStyle="insideOverlay"
            app:siTextSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siTextColor="@color/colorPrimary"
            app:siIndicatorColor="@color/colorPrimary"
            app:siSelectedTextColor="@color/colorPrimaryDark"
            android:id="@+id/indicatorr"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:padding="4dp" />

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/pagerr"
            android:layout_marginTop="?actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <!--app:siTextColor="@color/colorPrimaryDark"-->
    <!--app:siIndicatorColors="@array/indicator_colors"-->

    <!--app:siIndicatorColor="@color/colorPrimary"-->

</androidx.constraintlayout.widget.ConstraintLayout>