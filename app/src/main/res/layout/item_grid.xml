<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:background="@drawable/shape_grid"
        android:layout_height="80dp">

    <LinearLayout
            android:id="@+id/ali"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="horizontal">
            <!--android:layout_weight="1.3"-->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start">

                <ImageView
                        android:id="@+id/row_img"
                        android:layout_gravity="start"
                        android:background="@drawable/time_yel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                <ImageView
                        android:id="@+id/row_im"
                        android:layout_gravity="center"
                        android:src="@drawable/iconyou1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="2dp"
                android:orientation="vertical"
                android:weightSum="7">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mmm"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:gravity="center_vertical"
                    android:layout_weight="2.5">

                <TextView
                        android:id="@+id/row_tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="10sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toTopOf="@id/mmm"
                        app:layout_constraintBottom_toBottomOf="@id/mmm"
                        app:layout_constraintLeft_toLeftOf="@id/mmm"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:text="urok po jsoup" />

                <ImageView
                        android:id="@+id/Menu_Btn"
                        android:layout_width="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toRightOf="@id/row_tv_title"
                        app:layout_constraintTop_toTopOf="@id/mmm"
                        android:background="@drawable/ic_more_vert_black_24dp"
                        app:layout_constraintBottom_toBottomOf="@id/mmm"
                        app:layout_constraintRight_toRightOf="@id/mmm" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                    android:id="@+id/row_tv_discription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="23dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:textSize="9sp"
                    android:layout_weight="2.8"
                    android:text="po svabode" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_weight="1.7">

                <TextView
                        android:id="@+id/row_tv_additional_infoo"
                        android:layout_width="0dp"
                        android:layout_weight="1.64"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:paddingRight="8dp"
                        android:paddingLeft="2dp"
                        android:gravity="left"
                        android:layout_marginBottom="4dp"
                        android:text="123.4 mln" />

                <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/row_tv_additional_infoo"
                        android:layout_gravity="top"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/view_black" />

                <TextView
                        android:id="@+id/row_tv_additional_info"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:paddingLeft="2dp"
                        android:layout_marginRight="18dp"
                        android:gravity="end"
                        android:layout_marginBottom="4dp"
                        android:text="podrebnee" />

                <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/row_tv_additional_info"
                        android:layout_gravity="top"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/time_black" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>