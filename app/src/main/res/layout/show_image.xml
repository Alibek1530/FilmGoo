<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        tools:context=".ShowImage">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/aaa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">
        <!--app:popupTheme="@style/AppTheme.PopupOverlay"-->
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_show_imagee"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:id="@+id/ddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/aaa"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start"
                app:layout_constraintTop_toBottomOf="@id/aaa">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/mmm"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/mmmcon"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                <ImageView
                        android:id="@+id/ImageShow"
                        android:background="@color/colorPrimaryDark"
                        android:src="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"/>
                <ImageView
                        android:id="@+id/ImageSho"
                        android:layout_gravity="center"
                        android:background="@drawable/iconyou1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mmmcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mmm">
                <TextView
                        android:id="@+id/TitleShow"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        app:layout_constraintTop_toTopOf="@id/mmmcon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="alibek saymov"
                        android:textSize="15sp"/>
                <TextView
                        android:id="@+id/TimeShow"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        app:layout_constraintRight_toLeftOf="@id/imagee"
                        app:layout_constraintTop_toBottomOf="@id/TitleShow"
                        android:text="alibek saymov"
                        android:textSize="15sp"/>
                <ImageView
                        android:id="@+id/imagee"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintTop_toTopOf="@id/TimeShow"
                        app:layout_constraintBottom_toBottomOf="@id/TimeShow"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/time_y"
                />
                <TextView
                        android:id="@+id/Time1Show"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        app:layout_constraintRight_toLeftOf="@id/imagee"
                        app:layout_constraintTop_toBottomOf="@id/TimeShow"
                        android:text="alibek saymov"
                        android:textSize="15sp"/>
                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintTop_toTopOf="@id/Time1Show"
                        app:layout_constraintBottom_toBottomOf="@id/Time1Show"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/ic_event_black_24dp"/>

                <TextView
                        android:id="@+id/DataShow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/Time1Show"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="48dp"
                        android:layout_gravity="start"
                        android:text="alibek saymov"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>